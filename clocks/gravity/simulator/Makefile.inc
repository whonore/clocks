CCDEF += -DDEBUG_PINS=0
SCALE ?= 1
CCDEF += -DSCALE=$(SCALE)
SCREEN_WIDTH ?= 80
SCREEN_HEIGHT ?= $(shell tput lines)
CCDEF += -DSCREEN_WIDTH=$(SCREEN_WIDTH) -DSCREEN_HEIGHT=$(SCREEN_HEIGHT)
SCREEN_OFF_X ?= 0
SCREEN_OFF_Y ?= 0
CCDEF += -DSCREEN_OFF_X=$(SCREEN_OFF_X) -DSCREEN_OFF_Y=$(SCREEN_OFF_Y)
ROTATE ?= 0
CCDEF += -DROTATE=$(ROTATE)
