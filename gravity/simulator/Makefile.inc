CCOPTS += -DDEBUG_PINS=0
SCALE ?= 1
CCOPTS += -DSCALE=$(SCALE)
SCREEN_WIDTH ?= $(shell expr $$(tput cols) / 2)
SCREEN_HEIGHT ?= $(shell tput lines)
CCOPTS += -DSCREEN_WIDTH=$(SCREEN_WIDTH) -DSCREEN_HEIGHT=$(SCREEN_HEIGHT)
SCREEN_OFF_X ?= 0
SCREEN_OFF_Y ?= 0
CCOPTS += -DSCREEN_OFF_X=$(SCREEN_OFF_X) -DSCREEN_OFF_Y=$(SCREEN_OFF_Y)
ROTATE ?= 0
CCOPTS += -DROTATE=$(ROTATE)
